<div class="row">
	<div class="span8 offset2">
			<div class="row-fluid">
				{{>item/trades}}
			</div>
			{{^unable}}
			<form action="{{process_url}}" method="post">
			<input type="hidden" name="csrf" value="{{csrf}}" />
			<div class="row muted">
				You can selected up to {{max_items}} {{max_type}}
			</div>
			<div class="row">
				<ul class="thumbnails">
					{{#items}}
						<li class="span2">
							<div class="thumbnail pagination-centered">
								<img src="{{img}}" />
								<p>
									{{name}} <br />
								 	<input class="input-mini" type="number" name="items[{{id}}]" value="0" />
								</p>
					  		</div>
					  	</li>
					{{/items}}
				</ul>
			</div>
			<div class="row-fluid">
				<div class="span2">Description<br /><small class="muted">max 144 characters</small></div>
				<div class="span10">
					<textarea name="description" rows="3" class="input-medium"></textarea><br />
				</div>
			</div>
			<div class="row">
				<div class="media-body pagination-centered"><input type="submit" class="btn btn-primary" value="Create lot" /></div>
			  	</form>
			  </div>
			</div>
		{{/unable}}
	</div>
</div>