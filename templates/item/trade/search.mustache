<div class="row">
	<div class="span6 offset3">
			<div class="row-fluid">
				{{>item/trades}}
			</div>
			<div class="row-fluid">
				<p>We have found {{count_results}} results for "<i>{{term}}</i>"</p>
				<div class="span12 pagination-centered">{{& pagination}}</div>
			</div>
			{{#lots}}
			<div class="row-fluid">
			<div class="span7 offset3">
			<div class="row pagination-centered">
				<em><a href="{{user_profile}}">{{username}}</a></em>
				<div class="pull-right"><a href="{{bid_link}}" class="btn">Bid</a></div>
				<span class="pull-left"><strong>#<a href="{{lot_link}}">{{id}}</a></strong></span>
			</div>
			<div class="media">
				{{#inventory}}
					<img class="media-object pull-left" src="{{img}}" width="45" heigth="45" />
				  <div class="media-body">
				    {{name}}
				  </div>
				{{/inventory}}
			</div>
			<div class="row">{{description}}</div>
			<div class="row pagination-centered"><a href="{{bid_link}}" class="btn">Bid</a></div>
			</div>
			{{/lots}}
			<div class="row-fluid">
				<div class="span12 pagination-centered">{{& pagination}}</div>
			</div>
		</div>
	</div>
</div>