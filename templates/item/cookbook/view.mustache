<div class="row">
	<div class="span6 offset3">
		<div class="row">
		{{#recipe}}
			<div class="span4 offset1 pagination-centered"><img src="{{img}}" /> <br/> <strong>{{name}}</strong></div>
		{{/recipe}}
		</div>
		<div class="row" align="center">
		<ul class="thumbnails">
		{{#materials}}
			<li style="display: inline-block; float: none;"><div class="thumbnail span2 pagination-centered"><img src="{{img}}" /><br /> <em>{{name}}</em><br /> <span style="color: {{color}};">{{amount_owned}}/{{amount_needed}}</span></div></li>
		{{/materials}}
		</ul>
		</div>
		{{#collected}}
		<div class="row">
			<div class="span2 offset2 pagination-centered">
				<form action="{{url}}" method="post">
				<input type="hidden" name="id" value="{{id}}" />
				<input type="hidden" name="action" value="complete" />
				<input type="hidden" name="csrf" value="{{csrf}}" />
				<input type="submit" value="Cook ingredients" />
				</form>
			</div>
		</div>
		{{/collected}}
	</div>
</div>
